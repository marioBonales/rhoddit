<div id="pageTitle">
		<h1>Edit <%= @whats_hot.user%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @whats_hot.object %>
    <%= link_to "Delete", :action => :delete, :id => @whats_hot.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @whats_hot.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">User: </td>
              			<td class="itemValue"><input type="text" name="whats_hot[user]" value="<%= @whats_hot.user %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Story: </td>
              			<td class="itemValue"><input type="text" name="whats_hot[story]" value="<%= @whats_hot.story %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
