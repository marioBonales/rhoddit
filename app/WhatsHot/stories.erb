<div class="pageTitle">
  <h1>WhatsHot</h1>
</div>

<div class="toolbar">
  <div class="leftItem regularButton">
    <a href="<%= Rho::RhoConfig.start_path %>">Home</a>
  </div>
</div>


<div class="content">

<%if $stories != nil %>
  <ul>
    <%  $stories['data']['children'].each do |story| %>
	<li>
    <% if story['data']['thumbnail'] != '' %>
        <img style="margin: 10 10 10 10" src="<%=  story['data']['thumbnail'] %>" style="float:left;" />
    <% end %>
        <p style="margin:0 15px 0 15px"><%= story['data']['title'] %></p>
        <p>posted by: <%= story['data']['author'] %></p>
        <p>total score: <%= story['data']['score']%> </p>
        <p>(ups: <%= story['data']['ups'] %>, downs: <%= story['data']['downs'] %>)</p>


	</li>
    <%  end %>
  </ul>
<% end %>
</div>